  </tr>

<% @courses.each do |course| %>
  <tr class='<%= active course %>'>
    <td><%= course.year %></td>
    <td><%= course.period %></td>
    <td><%= link_to 'Show', course %></td>
    <td><%= link_to 'Edit', edit_course_path(course) %></td>
    <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <td> <% if not course.active %>
            <%= link_to 'make active', "/courses/#{course.id}/activity", :method => :post, data: { confirm: 'Are you sure?' }  %>
         <% end %>
    </td>
  </tr>
<% end %>
</table>

